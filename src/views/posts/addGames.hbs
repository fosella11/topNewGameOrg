<div class="container p-4">
    <div class="row">
        {{#each games}}
        <div class="card">
        <div class="card-body">
            <form action="/posts/addGames/{{games.id}}" method="POST">
                <div class="form-group">
                    <div class="form-group">
                    <input type="text" name="game" class="form-control" placeholder="Title" value="{{games.id}}" autofocus>
                </div>
                    <button class="btn btn-success btn-block">
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>
    {{/each}}
    </div>
</div>