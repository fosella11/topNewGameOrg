<div class="container p-4">
    <div class="container text-center my-auto">
            <h1 class="mb-1">The best lists of Top Games</h1>
            <h3 class="mb-5">
                <em>Store of your favorite games</em>
            </h3>
        </div>
    <div class="row">
        {{#each posts}}
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <a href="{{url_android}}" target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{tittle_w1}}
                        </h3>
                    </a>
                    <a> 
                        <iframe 
                        src="https://www.youtube.com/embed/qrAwiEGjv-Q?rel=0&amp;autoplay=1" 
                        width="250" 
                        height="250" 
                        frameborder="0" 
                        allowfullscreen></iframe>
                    </a>
                    <p class="m-2">
                        <p class="giveMeEllipsis">
                            {{desciption_w1}}
                        </p>
                        </p>

                    <p class="text-muted">
                        {{timeago created_at}}
                    </p>
                    <a class="btn btn-danger" href="/post/{{id}}">
                        Ver
                    </a>
                    <a class="btn btn-secondary" href="/posts/share/{{id}}">
                        Share
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
 <div class="overlay"></div>